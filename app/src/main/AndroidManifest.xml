    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/zennyicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/zennyicon"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZENNY">

        <service
            android:name=".WaterReminderService"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name=".ReminderBroadcastReceiver"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".activity_home"
                    android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

        <activity android:name=".activity_mood"
                  android:exported="true"/>

        <activity
            android:name=".dialog_add_habit"
            android:exported="false" />
        <activity
            android:name=".list_item_habit"
            android:exported="false" />
        <activity
            android:name=".activity_onboard3"
            android:exported="false" />
        <activity
            android:name=".activity_onboard2"
            android:exported="false" />
        <activity
            android:name=".activity_onboard1"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
